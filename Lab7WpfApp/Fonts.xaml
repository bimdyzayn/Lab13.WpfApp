<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WindowStyle">
        
    </Style>
    <Style x:Name="Arialstyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="FontFamily" Value="Arial"/>
    </Style>

    <Style x:Key="TNRstyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="FontFamily" Value="Times New Roman"/>
    </Style>

    <Style x:Key="Verstyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="FontFamily" Value="Verdana"/>
    </Style>
    
    <Style x:Key="14Size" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style x:Key="16Size" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style x:Key="18Size" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="FontSize" Value="18"/>
    </Style>
    

</ResourceDictionary>